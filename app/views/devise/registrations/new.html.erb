<div class="columns">
<div class="column"></div>
<div class="column">
<br><br>
<div class="card is-horizontal-center">
<div class="card-content">
<h2 class="title is-5">Sign up</h2>
<h4 class="subtitle is-6">we will never ask for your identity. we will use your email to ensure you aren't a robot.</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-small is-light" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "input is-small is-light" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-small is-light" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button is-black" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
<div class="column"></div>
</div>
