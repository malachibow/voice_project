
<div class="tabs">
  <ul>
    <li class="<%if params[:filter] == "following"%>th-700<%end%>"><%= link_to 'following', posts_path(filter: "following") %></li>
    <li class="<%if params[:filter] == "discover"%>th-700<%end%>"><%= link_to 'discover', posts_path(filter: "discover") %></li>
  </ul>
</div>


<section class="section">
<div class="containe">
<% @posts.each do |post|%>
  <!--------------------------------------------------------->
  <!--------------content------------------------------------------->
  <!--------------------------------------------------------->
        <p class="title is-4 m-b-0 p-t-0"><%= post.title %>  <span class="th-300 f-15"><%=time_ago_in_words(post.created_at)%></span></p>
        <p class="m-t-0 p-t-0 subtitle is-6"><%= post.user.username %></p>
        <p class="subtitle is-6">
        <% if !post.reply_to.nil? %>
            <% if post.agree? %>
              In agreement with
              "<%= link_to post_path(post.reply_to), class: "has-text-dark th-500" do %>
                <%= Post.find_by(id: post.reply_to).title %>
              <% end %>"
            <% else %>
              In disagreement with 
              "<%= link_to post_path(post.reply_to), class: "has-text-dark th-500" do %>
                <%= Post.find_by(id: post.reply_to).title %>
              <% end %>"
            <% end %>
        <% end %>
        </p>
        <p class="title is-6 m-b-20 m-t-20">stand: </p>
        <p class="subtitle is-6"><%= post.stand %></p>
  <!--------------------------------------------------------->
  <!--------------agree, disagree, etc------------------------------------------->
  <!--------------------------------------------------------->
    <nav class="navbar">
    <div class="navbar-start">
        <div class="navbar-item">
          <p class="has-text-dark"><%= Post.where(reply_to: post.id, agree: "1", publish: "1").count %> agree</p>
        </div>   
        <div class="navbar-item">
          <p class="has-text-dark"><%= Post.where(reply_to: post.id, agree: "0", publish: "1").count %> disagree</p>
        </div>   
        <div class="navbar-item">
        <div class="buttons">
            <%= link_to 'go to post', post_path(post.id), class: "button is-light" %>
        </div>
        </div>
    </div>
    </nav>
    <hr>
<% end %>
<%if !params.has_key?(:filter) || params[:filter] == "following"%>
<span class="th-700"><%== pagy_nav(@pagy) %></span>
<% end %>
</div>
</section>

<%if params[:filter] == "discover"%>
<nav class="navbar is-fixed-bottom">
<%= link_to posts_path(filter: "discover"), class: "button is-black changepost", :method => :get do %>
    <i class="material-icons f-40">clear</i>
<% end %>
</nav>
<% end %>
