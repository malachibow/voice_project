<div class="tabs">
  <ul>
    <li class="<%if params[:page] == "my_posts"%>th-700<%end%>"><%= link_to 'my posts', my_posts_path(page: "my_posts") %></li>
    <li class="<%if params[:page] == "my_reactions"%>th-700<%end%>"><%= link_to 'my reactions', my_posts_path(page: "my_reactions") %></li>
    <li class="<%if params[:page] == "drafts"%>th-700<%end%>"><%= link_to 'drafts', my_posts_path(page: "drafts") %></li>
  </ul>
</div>

<section class="section">
    <div class="container">
<% @posts.each do |post|%>
<article class="media">
  <div class="media-content">
    <div class="content p-20">
      <p>
        <%if params[:page] == "drafts"%> 
          <a class="material-icons has-text-black is-pulled-right toggle-modal" aria-control="edit<%= post.id %>">edit</a> 

        <!-----------edit modal----------------------------------->
        <div class="modal" id="edit<%= post.id%>">
          <div class="modal-background"></div>
            <div class="modal-content">
              <div class="box">
              <a class="delete is-pulled-right toggle-modal" aria-control="edit<%= post.id%>"></a>
              
              </div>
            </div>
        </div>
        <%end%>
        <p class="title is-4 m-b-0 p-t-0"><%= post.title %>  <span class="th-300 f-15"><%=time_ago_in_words(post.created_at)%></span></p>
        <p class="m-t-0 p-t-0 subtitle is-6"><%= post.user.username %></p>
        <p class="subtitle is-6">
        <% if !post.reply_to.nil? %>
            <% if post.agree? %>
              In agreement with 
              "<%= link_to post_path(post.reply_to), class: "has-text-dark th-500" do %>
                <%= Post.find_by(id: post.reply_to).title %>
              <% end %>"
            <% else %>
              In disagreement with 
              "<%= link_to post_path(post.reply_to), class: "has-text-dark th-500" do %>
                <%= Post.find_by(id: post.reply_to).title %>
              <% end %>"
            <% end %>
        <% end %>
        </p>
        <p class="title is-6 m-b-20 m-t-20">stand: </p>
        <p class="subtitle is-6"><%= post.stand %></p>
      </p>
    </div>
  </div>
</article>
  <!--------------------------------------------------------->
  <!--------------agree, disagree, etc------------------------------------------->
  <!--------------------------------------------------------->
    <nav class="navbar">
    <div class="navbar-start">
        <div class="navbar-item">
          <p class="has-text-dark"><%= Post.where(reply_to: post.id, agree: "1").count %> agree</p>
        </div>   
        <div class="navbar-item">
          <p class="has-text-dark"><%= Post.where(reply_to: post.id, agree: "0").count %> disagree</p>
        </div>   
        <div class="navbar-item">
            <%= link_to 'go to post', post_path(post.id), class:"button is-light" %>
        </div>
    </div>

    </nav>
    <hr>
<% end %>
    </div>
<% if @posts.blank? %>
  there are no posts to show.
<% end %>
</section>