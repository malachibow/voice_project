<% unless flash.empty? %>
    <script>
        <% flash.each do |key, value| %>
            <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'alert')%>
            new Noty ({
                type: '<%= type %>',
                layout: 'topRight',
                timeout: '5000',
                theme: 'semanticui',
                text: '<%= value %>'
            }).show();
        <% end %>
   </script>
<% end %>